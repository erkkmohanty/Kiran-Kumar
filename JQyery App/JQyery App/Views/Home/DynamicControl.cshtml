        @Html.TextBox("TodayDate")
        @Html.TextBoxFor(tb => tb.TodayDate)
        <br />

    }
    @using (Ajax.BeginForm("AjaxAction", new { id = 2 }, new AjaxOptions { UpdateTargetId = "data" }))
